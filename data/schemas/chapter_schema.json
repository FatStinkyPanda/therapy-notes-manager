{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chapter Schema",
  "description": "Schema for a single chapter within a workbook.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "content_schema.json"
      }
    }
  },
  "required": ["id", "title", "sections"]
}
